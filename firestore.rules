rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------
    // üßç USERS COLLECTION
    // -------------------------------
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // inbox subcollection (e.g. incoming call pointer)
      match /inbox/{docId} {
        allow read: if request.auth.uid == userId;
        allow write: if false; // only server writes
      }
    }

    // -------------------------------
    // üí¨ CHATS COLLECTION
    // -------------------------------
    match /chats/{chatId} {
      // Must be a member of the chat to read/write
      allow read, create, update, delete: if request.auth != null 
        && (request.resource.data.members has request.auth.uid || resource.data.members has request.auth.uid);

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null 
          && (resource.data.from == request.auth.uid || (resource.data.to != null && request.auth.uid in resource.data.to));
        allow create: if request.auth != null && request.auth.uid == request.resource.data.from;
        allow update, delete: if request.auth != null 
          && (request.auth.uid == resource.data.from || (resource.data.to != null && request.auth.uid in resource.data.to));
      }

      // Pins subcollection
      match /pins/{pinId} {
        allow read, write: if request.auth != null 
          && (request.resource.data.members has request.auth.uid || resource.data.members has request.auth.uid);
      }
    }

    // -------------------------------
    // TYPING INDICATORS COLLECTION (optional)
    // -------------------------------
    match /typing/{chatId} {
      allow read, write: if request.auth != null 
        && (chatId.matches('.*' + request.auth.uid + '.*'));
    }

    // -------------------------------
    // üíµ WALLETS COLLECTION
    // -------------------------------
    match /wallets/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // only admin server
    }

    // -------------------------------
    // üìû CALLS COLLECTION
    // -------------------------------
    match /calls/{callId} {
      allow read: if request.auth != null 
        && (resource.data.caller == request.auth.uid || resource.data.callee == request.auth.uid);
      allow create, update, delete: if false; // server only
    }

    // -------------------------------
    // üóÇÔ∏è SETTINGS COLLECTION
    // -------------------------------
    match /settings/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // -------------------------------
    // üö´ DEFAULT DENY FOR EVERYTHING ELSE
    // -------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}