rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ðŸ”¸ Chat uploads
    match /chat_uploads/{chatId}/{fileName} {
      // Allow read/write only to chat participants
      allow read, write: if request.auth != null && chatId.matches('.*' + request.auth.uid + '.*');
    }

    // ðŸ”¸ User profile uploads (avatars, etc.)
    match /user_avatars/{uid}/{fileName} {
      allow read: if true; // public profile photos
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // ðŸ”¸ Voice messages
    match /voice_notes/{chatId}/{fileName} {
      allow read, write: if request.auth != null && chatId.matches('.*' + request.auth.uid + '.*');
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}